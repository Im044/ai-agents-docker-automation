# AI Agents Docker Automation Configuration
# Copy this file to .env and add your actual API keys

# ===== API Keys (REQUIRED) =====
# Get OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Get Anthropic API key from: https://console.anthropic.com
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ===== Logging Configuration =====
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable debug mode for detailed logging
DEBUG_MODE=false

# ===== Agent Configuration =====
# Agent names (can be customized)
CONTENT_CREATOR_NAME=ContentCreator
DATA_ANALYST_NAME=DataAnalyst
RESEARCH_AGENT_NAME=ResearchAgent
CODE_ASSISTANT_NAME=CodeAssistant
SALES_MARKETING_NAME=SalesMarketing

# ===== Port Configuration =====
# Ports for each agent service
CONTENT_CREATOR_PORT=8001
DATA_ANALYST_PORT=8002
RESEARCH_AGENT_PORT=8003
CODE_ASSISTANT_PORT=8004
SALES_MARKETING_PORT=8005

# ===== Timeout Settings =====
# Request timeout in seconds
REQUEST_TIMEOUT=300

# Agent operation timeout in seconds
AGENT_TIMEOUT=600

# ===== Database Configuration =====
# Database URL for storing agent data
DATABASE_URL=sqlite:///./agents.db

# ===== Docker Configuration =====
# Docker network name
DOCKER_NETWORK=ai-agents-network

# ===== Performance Settings =====
# Maximum concurrent requests per agent
MAX_CONCURRENT_REQUESTS=10

# Memory limit per agent (in MB)
MEMORY_LIMIT=2048

# ===== LLM Model Configuration =====
# Default models to use
DEFAULT_MODEL=claude-3-5-sonnet-20241022
FALLBACK_MODEL=gpt-4-turbo

# Model temperature (0.0 = deterministic, 1.0 = creative)
MODEL_TEMPERATURE=0.7

# Maximum tokens for generation
MAX_TOKENS=2048

# ===== Features (Optional) =====
# Enable RAG (Retrieval Augmented Generation)
ENABLE_RAG=true

# Enable memory/conversation history
ENABLE_MEMORY=true

# Enable web search capability
ENABLE_WEB_SEARCH=false

# ===== Notifications (Optional) =====
# Email notifications on errors
ENABLE_EMAIL_ALERTS=false
ALERT_EMAIL=your-email@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Slack notifications
ENABLE_SLACK_ALERTS=false
SLACK_WEBHOOK_URL=

# ===== Security =====
# Enable API key validation
VALIDATE_API_KEYS=true

# Rate limiting (requests per minute)
RATE_LIMIT=60

# ===== Monitoring =====
# Enable Prometheus metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Enable health checks
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30
